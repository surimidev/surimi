---
import Footer from '#components/_docs/Footer/Footer.astro';
import Sidebar from '#components/_docs/Sidebar/Sidebar.astro';
import SidebarMobileMenu from '#components/_docs/SidebarMobileMenu/SidebarMobileMenu.astro';

import Main from '../Main/Main.astro';

import 'remark-github-blockquote-alert/alert.css';
import './Docs.css';

const { frontmatter } = Astro.props;
const { title } = frontmatter;
---

<Main class="docs" title={title}>
  <Sidebar />
  <main class="docs__content">
    <slot />
    <Footer />
  </main>
  <SidebarMobileMenu />
</Main>
