---
import './Footer.css';

const path = Astro.url.pathname.replace(/\/$/, '');
const githubTreeUrl = `https://github.com/surimidev/surimi/tree/main/packages/docs/src/pages${path}.mdx`;
---

<footer class="docs__footer">
  Found an issue? <a href="https://github.com/surimidev/surimi/issues" target="_blank" rel="noopener">Report it</a> or <a
    href={githubTreeUrl}
    target="_blank"
    rel="noopener">edit this page</a
  >
</footer>
