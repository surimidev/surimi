---
import { ExternalLinkIcon, GithubIcon, NpmIcon } from '../icons';

import './Header.css';

const TITLE = 'üç£ surimi';

const NAV_LINKS = [
  { href: '/docs/getting-started', text: 'Getting Started' },
  { href: '/docs/installation', text: 'Installation' },
  { href: '/playground', text: 'Playground', external: true },
] as const;

const SOCIAL_LINKS = [
  { href: 'https://github.com/janis-me/surimi', text: 'GitHub', icon: GithubIcon },
  { href: 'https://www.npmjs.com/package/surimi', text: 'NPM', icon: NpmIcon },
];
---

<div class="header">
  <h1 class="header__title">{TITLE}</h1>
  <nav class="header__nav">
    {
      NAV_LINKS.map(link => (
        <a class="header__nav-link" href={link.href}>
          {link.text}
          {'external' in link && link.external ? <Fragment set:html={ExternalLinkIcon.html} /> : null}
        </a>
      ))
    }
  </nav>
  <div class="header__social">
    {
      SOCIAL_LINKS.map(link => (
        <a class="header__social-link" href={link.href} aria-label={link.text} target="_blank" rel="noopener">
          <Fragment set:html={link.icon.html} />
        </a>
      ))
    }
  </div>
</div>
